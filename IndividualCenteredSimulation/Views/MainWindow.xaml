<Window x:Name="MainWindow_" x:Class="IndividualCenteredSimulation.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IndividualCenteredSimulation"
        mc:Ignorable="d"
        xmlns:viewModels="clr-namespace:IndividualCenteredSimulation.ViewModels"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen"
        Title="Individual Centered Simulation">

    <Window.DataContext>
        <viewModels:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <ScrollViewer x:Name="scrollViewer" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"  Margin="20,20,20,20">
            <Border BorderBrush="Black" BorderThickness="2">
                <Image Stretch="Fill" Source="{Binding WriteableBitmap}" />
            </Border>
        </ScrollViewer>
    </Grid>
</Window>
